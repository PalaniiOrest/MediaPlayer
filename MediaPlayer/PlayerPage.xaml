<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MediaPlayer.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid 
        x:Name="RootGrid">
        <Grid 
            x:Name="MinimizedPlayerPresenter"
            Width="100"
            Height="70"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Background="Transparent"
            Tapped="MinimizedPlayerPresenter_Tapped">
            <TextBlock
                x:Name="NameOfMedia"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="16">
                VideoName
            </TextBlock>
        </Grid>

        <Slider
            x:Name="ProgressSlider"
            Minimum="0" Maximum="100"
            TickFrequency="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Margin="50, 0, 50, 0"
            ValueChanged="ProgressSlider_ValueChanged"/>

        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" 
            Margin="10">
            <Slider 
                x:Name="VolumeSlider"
                Minimum="0"
                Maximum="1.25"
                Value="0.5"
                TickFrequency="0.05"
                StepFrequency="0.05"
                IsThumbToolTipEnabled="True"
                Width="150"
                ValueChanged="VolumeSlider_ValueChanged"/>
        </StackPanel>

        <StackPanel
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom">
            <Button x:Name="prevButton" Click="prevButton_Click">
                <FontIcon Glyph="&#xE892;" />
            </Button>
            <Button x:Name="playButton" Click="playButton_Click">Play</Button>
            <Button x:Name="nextButton" Click="nextButton_Click">
                <FontIcon Glyph="&#xE893;" />
            </Button>
        </StackPanel>
    </Grid>
</Page>
